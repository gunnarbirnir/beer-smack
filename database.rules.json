{
  "rules": {
    ".read": true,
    ".write": false,
    "rooms": {
      "$room_id": {
        "hasStarted": {
          ".write": true
        },
        "finished": {
          ".write": true
        },
        "users": {
          ".write": true,
          "$user_id": {
            "ratings": {
              "$beer_id": {
                ".validate": "newData.isNumber() && newData.val()>=0 && newData.val()<=10"
              }
            }
          }
        }
      }
    }
  }
}
